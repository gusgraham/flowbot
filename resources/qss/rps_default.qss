QProgressBar { 
    color: rgb(255, 255, 255);
}

QProgressBar::chunk {
    background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, stop:0 rgba(113, 0, 75, 255), stop:1 rgba(230, 230, 230, 255));
    border: 1px solid grey;
    border-radius: 5px;
}
