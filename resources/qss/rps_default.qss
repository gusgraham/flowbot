QTabBar::tab {
	background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 rgba(210, 210, 210, 255), stop: 1.0 rgba(230, 230, 230, 255));
	border-radius: 5px;
    min-width: 30ex;
	min-height: 7ex;
	margin-top:1ex;
    margin-right: -1px;
}

QTabBar::tab:top, QTabBar::tab:bottom {
    min-width: 8ex;
    margin-right: -1px;
    padding: 2px 10px 2px 5px;
}

QTabBar::tab:selected{
	background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 rgba(113, 0, 75, 255), stop: 1.0 rgba(230, 230, 230, 255));
	color: white
}

QTabBar::tab:!selected {
    margin-bottom: 2px; /* make non-selected tabs look smaller */
}

